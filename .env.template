# =============================================================================
# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Required: Gemini API Key
# -----------------------------------------------------------------------------
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# Environment Settings
# -----------------------------------------------------------------------------
# Options: development, production
ENVIRONMENT=development

# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# RAG Configuration
# -----------------------------------------------------------------------------
# Embedding model from SentenceTransformers
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, BAAI/bge-large-en-v1.5
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Gemini model to use
# Options: gemini-2.5-flash, gemini-2.5-pro
GEMINI_MODEL=gemini-2.5-flash

# Text chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval parameters
TOP_K_RESULTS=3

# LLM generation parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Maximum files per session
MAX_FILES_PER_SESSION=5

# -----------------------------------------------------------------------------
# Session Configuration
# -----------------------------------------------------------------------------
# Session timeout in minutes
SESSION_TIMEOUT_MINUTES=30

# Use separate collections per session (true) or shared collection (false)
USE_SESSION_COLLECTIONS=true

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
# Enable caching
ENABLE_CACHING=true

# Batch size for embedding generation
BATCH_SIZE=32

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Enable filename sanitization
SANITIZE_FILENAMES=true

# Enable virus scanning (requires ClamAV)
ENABLE_VIRUS_SCAN=false

# -----------------------------------------------------------------------------
# Advanced Settings (Optional)
# -----------------------------------------------------------------------------
# Custom vector store directory (relative to project root)
# VECTOR_STORE_DIR=data/vector_store

# Custom upload directory
# UPLOAD_DIR=data/uploads
